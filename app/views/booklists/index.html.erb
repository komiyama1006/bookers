<h1>Books</h1>

	<table>

		<th>Title</th>
		<th>Body</th>
		<th></th>
		<th></th>
		<th></th>

 			<% @books.each do |book| %>

 				<tr>
					<td><%= book.title %></td>
					<!-- <td><%=link_to book.title, booklist_path(book.id) %></td> -->
					<td><%= book.body %></td>
					<td><%= link_to "Show", books_path(book.id) %></td>
					<td><%= link_to "Edit", edit_booklist_path(book.id) %></td>
					<td><%= link_to "Destroy", destroy_booklist_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %></td>
				</tr>
			<% end %>
 	</table>


<h2>New book</h2>
<!-- @bookの中にエラーが入っているか。入っている場合、エラー分を表示させる。 -->
<% if @book.errors.any? %>	
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- form_for部分 -->
<%= form_for(@book , url: '/booklists') do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book'%></br>

<% end %>
